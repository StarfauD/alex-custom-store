.header-wrapper {
    background-color: {{ settings.header-background-color }};
}

.header__menu-item {
    color: {{ settings.header-top-menu-color }};
    font-size: {{ settings.header-font-size }}px;
}

.header__menu-item:hover {
    color: {{ settings.header-top-menu-color-hover }};
}

.header__menu-item .header__active-menu-item {
    color: {{ settings.header-top-menu-color-hover }};
}

.modal__toggle-open.icon-search {
    color: {{ settings.header-icon-color }};
    width: 24px;
    height: 24px;
}

.modal__toggle-open.icon-search:hover {
    color: {{ settings.header-icon-color-hover }};
}

.header__icon--cart {
    color: {{ settings.header-icon-color }};
}

.header__icon--cart:hover {
    color: {{ settings.header-icon-color-hover }};
}

.cart-count-bubble {
    background-color: {{ settings.header-top-menu-color-hover }};
    color: {{ settings.header-background-color }};
    font-size: 12px;
}

.search-modal__content {
    background-color: {{ settings.header-background-color }};
}

.search-modal__close-button {
    color: {{ settings.header-icon-color }};
}

.search__input {
    --color-foreground: 0;
}

.header__submenu {
    background-color: {{ settings.header-drop-down-menu-background }}
}

.header__submenu .header__menu-item {
    color: {{ settings.header-drop-down-menu-color }};
}

.header__submenu .header__menu-item:hover {
    color: {{ settings.header-drop-down-menu-color-hover }};
}

.header__submenu .header__menu-item {
    font-size: {{ settings.header-drop-down-menu-font-size }}px;
}
